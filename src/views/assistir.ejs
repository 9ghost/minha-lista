<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('partials/header') %>
        <link rel="stylesheet" href="css/assistir.css">
        <title>Assistindo: <%= anime.attributes.canonicalTitle %>: Episódio n. <%= episode %>
        </title>
</head>

<body>
    <%- include('partials/load') %>
        <%- include('partials/navbar') %>
            <div class="stream">
                <h1>Assistindo: <%= anime.attributes.canonicalTitle %>: Episódio n. <%= episode %>
                </h1>
                <div class="iframe-container">
                    <video width="100%" height="100%" controls>
                        <source src="<%= temDublado.url %>" type="video/mp4" name="dublado">
                        Your browser does not support the video tag.
                    </video>
                    <iframe scrolling="no" src="<%= streamUrl %>" allowfullscreen="true" webkitallowfullscreen="true"
                        mozallowfullscreen="true" id="stream"></iframe>
                </div>
                <a href="/animes/anime/<%= anime.id %>/assistir/<%= episode - 1 %>"><button class="player-buttons"><i
                            class="fa fa-arrow-left" aria-hidden="true"></i> Episódio anterior</button></a>
                <a href="/animes/anime/<%= anime.id %>/assistir/<%= episode + 1 %>"><button
                        class="player-buttons">Próximo episódio <i class="fa fa-arrow-right"
                            aria-hidden="true"></i></button></a>
                <a><button class="player-buttons" onclick="history.back()"><i class="fa fa-film" aria-hidden="true"></i>
                        Todos os episodios</button></a>
                <a><button class="player-buttons" onclick="location.reload()" id="recarregar"><i class="fa fa-refresh"
                            aria-hidden="true"></i> Recarregar video</button></a>
                <% if(temDublado.bool) { %>
                    <a><button style="background: #ffd700; box-shadow: 0px 0px 15px 0px rgba(255,215,0,1);" onclick="getDublado()" class="player-buttons" id="dublado"><i
                                class="fa fa-language" aria-hidden="true"></i> Assistir dublado</button></a>
                    <% } %>
            </div>
            <script>
                if(/hls/m.test('<%= temDublado.url %>')) $('#dublado').html = 'Assistir Dublado'
                else  $('#dublado').html = 'Assistir Legendado'
                function getDublado() {
                    $('#recarregar').html('<i class="fa fa-refresh" aria-hidden="true"></i> Voltar para o inglês')
                    $('video').css('display', 'block');
                    $(window.document.getElementById('stream')).remove();
                    $('#dublado')[0].disabled = true
                    $('#dublado').css('cursor', 'not-allowed')
                }
            </script>
            <%- include('partials/footer') %>
</body>

</html>